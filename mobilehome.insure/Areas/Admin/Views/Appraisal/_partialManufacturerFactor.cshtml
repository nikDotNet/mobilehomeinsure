@model MobileHome.Insure.Web.Models.Admin.ListManufacturerFactorViewModel


<div class="portlet-title"><div class="caption">Add / Edit Manufacturer Factor</div></div>
<div class="portlet-body">
    <form method="post" id="frmManuFactor" action="_partialManufacturerFactor" class="form-horizontal" role="form">
        <div class="form-body">


            @Html.HiddenFor(x => x.objManufacturerFactor.Id)


            <div class="form-group">
                @Html.LabelFor(x => x.objManufacturerFactor.ManufacturerId, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.objManufacturerFactor.ManufacturerId, new SelectList(Model.lstManufacturers, "Id", "Name"), "", new { @class = "form-control select2me input-medium" })
                    @Html.ValidationMessageFor(x => x.objManufacturerFactor.ManufacturerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.objManufacturerFactor.Factor, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.objManufacturerFactor.Factor, new { @class="form-control input-medium" })
                    @Html.ValidationMessageFor(x => x.objManufacturerFactor.Factor, "", new { @class = "text-danger" })

                </div>

            </div>

        </div>

        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Save
                </button>
            </div>
        </div>


    </form>
</div>
<script type="text/javascript">
    $(function () {
        $('#frmManuFactor').submit(function () {
            if ($(this).valid())
                $('#modal-container').modal('hide');
        });
        $(".select2me").select2();
        $.validator.unobtrusive.parse("#frmManuFactor");
    });

</script>