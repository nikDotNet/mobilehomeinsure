@model MobileHome.Insure.Web.Models.Admin.ListStateFactorViewModel


<div class="portlet-title"><div class="caption">Add / Edit State Factor</div></div>
<div class="portlet-body">
    <form method="post" id="frmStateFactor" action="_partialStateFactor" class="form-horizontal" role="form">
        <div class="form-body">


            @Html.HiddenFor(x => x.stateFactorObj.Id)


            <div class="form-group">
                @Html.LabelFor(x => x.stateFactorObj.StateId, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.stateFactorObj.StateId, new SelectList(Model.lstStates, "Id", "Name"), "", new { @class = "form-control select2me input-medium" })
                    @Html.ValidationMessageFor(x => x.stateFactorObj.StateId, "", new { @class = "text-danger" })
                </div>
            </div>
            
            <div class="form-group">
                @Html.LabelFor(x => x.stateFactorObj.Factor, new { @class= "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.stateFactorObj.Factor, new { @class="form-control input-medium" } )

                </div>

        </div>

            </div>
        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
    $(function () {
        $('#frmStateFactor').submit(function () {
            if ($(this).valid())
                $('#modal-container').modal('hide');
        });
        $(".select2me").select2();
        $.validator.unobtrusive.parse("#frmStateFactor");
    });

</script>