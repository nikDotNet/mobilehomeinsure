@model mobilehome.insure.Areas.Admin.Models.OptionsFactorViewModel


<div class="portlet-title"><div class="caption">Add / Edit Options Factors</div></div>
<div class="portlet-body">
    <form method="post" id="frmOptions" action="_partialOptions" class="form-horizontal" role="form">
        <div class="form-body">


            @Html.HiddenFor(x=> x.optionFactorObject.Id)


            <div class="form-group">
                @Html.LabelFor(x => x.optionFactorObject.StateId, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.optionFactorObject.StateId, new SelectList(Model.lstStates, "Id", "Name"), "", new { @class = "form-control select2me input-medium" })
                    @Html.ValidationMessageFor(x => x.optionFactorObject.StateId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.optionFactorObject.ManufacturerId, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.optionFactorObject.ManufacturerId, new SelectList(Model.lstManufacturers, "Id", "Name"), "", new { @class = "form-control select2me input-medium" })
                    @Html.ValidationMessageFor(x => x.optionFactorObject.ManufacturerId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.optionFactorObject.OptionsTypeId, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(x => x.optionFactorObject.OptionsTypeId, new SelectList(Model.lstOptionsType, "key", "value"), "Select One", new { @class = "form-control select2me input-large" })
                    @Html.ValidationMessageFor(x => x.optionFactorObject.OptionsTypeId, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">

                @Html.LabelFor(x => x.optionFactorObject.Rate, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.optionFactorObject.Rate, new { @class = "form-control input-medium" })
                    @Html.ValidationMessageFor(x => x.optionFactorObject.Rate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.optionFactorObject.Factor, new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.TextBoxFor(x => x.optionFactorObject.Factor, new { @class = "form-control input-medium" })
                    @Html.ValidationMessageFor(x => x.optionFactorObject.Factor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


      

        <div class="row">
            &nbsp;
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Save
                </button>
            </div>
        </div>
    </form>
 
</div>
<script type="text/javascript">
    $(function () {
        $('#frmOptions').submit(function () {
            if ($(this).valid())
                $('#modal-container').modal('hide');
        });
        $(".select2me").select2();
        $.validator.unobtrusive.parse("#frmOptions");
    });

</script>









