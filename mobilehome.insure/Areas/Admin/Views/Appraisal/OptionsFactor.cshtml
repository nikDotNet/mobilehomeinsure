                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="tblAgeFactor">
                    <thead>
                        <tr>
                            <th>Manufacturer
                            </th>
                            <th>State
                            </th>
                            <th>Options Type
                            </th>
                            <th>Rate
                            </th>
                            <th>Factor
                            </th>
                            <th>Edit
                            </th>
                            <th>Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                            @foreach(var item in Model.lstOptionFactors)
                            {
                        <tr>
                            <td>@item.Manufacturer.Manufacturer1
                            </td>
                            <td>@item.State.Name
                            </td>
                            <td>@item.OptionsType.Name
                            </td>
                            <td>@item.Rate
                            </td>
                            <td>@item.Factor
                            </td>
                            <td>
                                <a class="edit" href="javascript:;">Edit </a>
                            </td>
                            <td>
                                <a class="delete" href="javascript:;">Delete </a>
                            </td>
                        </tr>}
                    </tbody>
                </table>
            </div>
