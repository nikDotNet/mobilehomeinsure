@{
    ViewBag.Title = "Park Sites Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section customstyle
{
    <style type="text/css">
        .modal-dialog {
            width: 85% !important;
        }

        .modal-content {
            width: 100% !important;
        }
    </style>
}
<h3 class="page-title">
    Park Sites Report
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="index.html">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Dashboard</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Reporting</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Park Sites Report</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->
<!-- BEGIN PAGE CONTENT-->
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Park Sites Report
                </div>
            </div>
            <div class="portlet-body">
                <div class="row form-group">
                    <div class="col-md-4">
                        <label class="control-label">Effective Date:</label>
                        <div class="form-group">
                            <div class='input-group date' id='txtEffectiveDate'>
                                <input type='text' class="form-control" size="10" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Expiry Date:</label>
                        <div class="form-group">
                            <div class='input-group date' id='txtExpiryDate'>
                                <input type='text' class="form-control" size="10" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Park:</label>
                        <div class="form-group">
                            <div class='input-group date' id='txtExpiryDate'>
                                @Html.Hidden("parkList", "", new { id = "parkList", @class = "form-control select2me2 input-medium" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-md-4" style="vertical-align:bottom;">
                        <button class="btn btn-success" id="btnSearch">Search</button>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="tblLists">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                ParkId
                            </th>
                            <th>
                                Site Number
                            </th>
                            <th>
                                Park Name
                            </th>
                            <th>
                                Tenant First Name
                            </th>
                            <th>
                                Tenant Last Name
                            </th>
                            <th>
                                Insurance Company
                            </th>
                            <th>
                                Effective Date
                            </th>
                            <th>
                                Expiration Date
                            </th>
                            <th>
                                Site Rental
                            </th>
                            <th>
                                Liability Limit
                            </th>
                            <th>
                                Property Limit
                            </th>
                            <th>
                                Premium
                            </th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
</div>







@section scripts
{
    <script src="~/Areas/Admin/Script/reporting.js"></script>
    <script type="text/javascript">
        var effectiveDate = null;
        var expiryDate = null;
        var parkId = null;
        var dataTable = null;
        var dataTableAfterInit = null;

        $(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            QuickSidebar.init(); // init quick sidebar
            Demo.init(); // init demo features


            var tableColumns = [
               {
                   "mDataProp": "Id",
                   "bSearchable": false,
                   "bSortable": false,
                   //"bVisible": false
               },
               { "mDataProp": "ParkId", "bVisible": false },
               { "mDataProp": "SiteNumber" },
               { "mDataProp": "ParkName" },
               { "mDataProp": "TenantFirstName", },
               { "mDataProp": "TenantLastName" },
               { "mDataProp": "CompanyName" },
               { "mDataProp": "EffectiveDate" },
               { "mDataProp": "ExpiryDate" },
               { "mDataProp": "SiteRental" },
               { "mDataProp": "Liability" },
               { "mDataProp": "PersonalProperty" },
               { "mDataProp": "Premium" },
            ];

            ReportingActions.init("/Admin/Reporting/LoadParkSites", tableColumns);
            $("#tblLists_filter").css("display", "none"); //hide common/global filter


            $("#btnSearch").off("click");
            $("#btnSearch").on("click", function (e) {
                e.preventDefault();
                effectiveDate = $("#txtEffectiveDate").find("input").val();
                expiryDate = $("#txtExpiryDate").find("input").val();
                parkId = $("#parkList").val();
                ReportingActions.search();
            });

            //initialize date controls
            $('#txtEffectiveDate').datetimepicker({
                format: 'MM/DD/YYYY'
            });
            $('#txtExpiryDate').datetimepicker({
                format: 'MM/DD/YYYY'
            });

        });


        function search(oTable, effectiveDate) {
            //redraw table with custom filter
            //debugger;

            if (effectiveDate != null) {
                var arrayData = effectiveDate.split(",");
                var idx = arrayData[0];
                var value = arrayData[1];
                oTable.column(idx)
                        .search(value)
                        .draw();
            }
        }

        $(".select2me2").select2({
            placeholder: "Select a Park to filter",
            minimumInputLength: 2,
            'allowClear': true,
            ajax: { // instead of writing the function to execute the request we use Select2's convenient helper
                url: "/Park/GetParkList",
                dataType: 'json',
                type: "GET",
                quietMillis: 50,
                data: function (term) {
                    return {
                        searchParam: term
                    };
                },
                results: function (data) {
                    return {
                        results: data
                    };
                }
            },
            initSelection: function (element, callback) {

                callback(data);
            }
        }).on("change", function (e) {
            // mostly used event, fired to the original element when the value changes
            $("#tblLists").dataTable().fnFilter(e.val, 1);
        });
    </script>
}


