@using System.Web.WebPages.Html
@model mobilehome.insure.Areas.Admin.Models.ParkSitesViewModel
@{
    Layout = null;
}
<div class="portlet-title">
    <div class="caption">Add / Edit Park Site</div>
</div>
<div class="portlet-body form">
    <form method="post" action="/Park/editParkSite" role="form" class="horizontal-form">
        <div class="form-body">
            <div class="row">
                @Html.HiddenFor(x => x.CurrentParkSite.Id)                
                @Html.HiddenFor(x => x.CurrentParkSite.Quote.CompanyId)
                @Html.HiddenFor(x => x.CurrentParkSite.QuoteId)
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.Park.ParkName, new { @class = "control-label" })   
                        @Html.DropDownListFor(x => x.CurrentParkSite.ParkId, new SelectList(Model.Parks, "Id", "ParkName"), "", new { id = "ddlParkId", @class = "form-control select2me input-medium" })                     
                        @*@Html.TextBoxFor(x => x.CurrentParkSite.Park.ParkName, new { @class = "form-control input-medium" })*@
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.Park.ParkName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <!-- Tenant Details-->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.SiteNumber, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.SiteNumber, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.SiteNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.TenantFirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.TenantFirstName, new { @class = "form-control input-medium" })                        
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.TenantFirstName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.TenantLastName, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.TenantLastName, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.TenantLastName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <!-- Physical address-->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.PhysicalAddress1, new { @class = "control-label" })
                        @Html.TextAreaFor(x => x.CurrentParkSite.PhysicalAddress1, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.PhysicalAddress1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.PhysicalAddress2, new { @class = "control-label" })
                        @Html.TextAreaFor(x => x.CurrentParkSite.PhysicalAddress2, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.PhysicalAddress2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.PhysicalStateId, new { @class = "control-label" })
                        @Html.DropDownListFor(x => x.CurrentParkSite.PhysicalStateId, new System.Web.Mvc.SelectList(Model.States, "Id", "Name"), new { id = "ddlPhysicalStateId", @placeholder = "Select a State", @class = "form-control select2me", style = "width:100%" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.PhysicalStateId, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*</div>
                    <div class="row">*@
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.PhysicalCity, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.PhysicalCity, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.PhysicalCity, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.PhysicalZip, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.PhysicalZip, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.PhysicalZip, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Dates-->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.Quote.EffectiveDate, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.Quote.EffectiveDate, new { @class = "form-control", size = "10" })                        
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.Quote.EffectiveDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.Quote.ExpiryDate, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.Quote.ExpiryDate, new { @class = "form-control", size = "10" })                        
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.Quote.ExpiryDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <!-- Premium Details-->
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.Quote.Company.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.Quote.Company.Name, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.Quote.Company.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.Quote.Liability, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.Quote.Liability, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.Quote.Liability, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        @Html.LabelFor(x => x.CurrentParkSite.Quote.Premium, new { @class = "control-label" })
                        @Html.TextBoxFor(x => x.CurrentParkSite.Quote.Premium, new { @class = "form-control input-medium" })
                        @Html.ValidationMessageFor(x => x.CurrentParkSite.Quote.Premium, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        

        <div class="form-actions">
            <div class="col-md-4 col-md-offset-5">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    Cancel
                </button>
                <button type="submit" id="approve-btn"
                        class="btn btn-danger">
                    Save
                </button>
            </div>
        </div>
    </form>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".select2me").select2({
            dropdownParent: "#modal-container"
        });

        $("#CurrentParkSite_Quote_EffectiveDate").datepicker({ dateFormate: "mm/dd/yyyy" });
        $("#CurrentParkSite_Quote_ExpiryDate").datepicker({ dateFormate: "mm/dd/yyyy" });
    });    
    
    </script>