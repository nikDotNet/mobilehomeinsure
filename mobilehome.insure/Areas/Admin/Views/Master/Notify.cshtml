@model MobileHome.Insure.Web.Models.Admin.ListNotifyViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->
